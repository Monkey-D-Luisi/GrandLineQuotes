@model QuoteListItemViewModel

<tr>
    <td>@Model.AuthorName</td>
    <td>@Model.EpisodeNumber</td>
    <td>@Model.Text</td>
    <td class="text-center">@Html.Raw(Model.IsReviewed ? "<i class=\"text-success bi bi-check-lg\"></i>" : "<i class=\"text-danger bi bi-x-lg\"></i>")</td>
    <td class="text-center">
        <button class="btn btn-link text-warning p-0 me-2" title="Modify" onclick="openQuoteModal(@Model.Id)">
            <i class="bi bi-pencil-square"></i>
        </button>
        <button class="btn btn-link text-danger p-0" title="Delete" onclick="deleteQuote(@Model.Id)">
            <i class="bi bi-trash"></i>
        </button>
    </td>
</tr>